{
  "statusFile":"/some/status.json",
  "log":{
    "name": "CHECK",
    "file": "/var/log/mylog.log",
    "logLevel": "WARN"
  },
  "checkSuites": [
    {
      "name":"Basic Server Check",
      "checks": [
        {
          "name":"Load",
          "type":"load",
          "warning": 0.8,
          "error": 1.0
        },
        {
          "name":"Diskspace",
          "type":"diskspace",
          "path":"/",
          "warning": "2GB",
          "error": "500MB"
        }
      ]
    },
    {
      "name":"Online",
      "checks": [
        {
          "name":"nginx Running",
          "type":"process",
          "item":"nginx",
          "recommendations": [
            "Restart nginx",
            "Check service nginx status",
            "Check nginx LogFile"
          ],
          "actions": [
            "service nginx start"
          ]
        },
        {
          "name":"Incoming Map-XML Timestamp < 15 minutes",
          "type":"fileage",
          "target":"/some/folder/file.xml",
          "warning": "420",
          "critical": "900"
        },
        {
          "name":"Incoming Map-XML is well-formed",
          "type":"xml",
          "item":"/some/folder/file.xml"
        },
        {
          "name":"Map-XML is accessible via http",
          "type":"http",
          "item":"http://server/file.xml",
          "warning": "2",
          "critical": "15"
        },
        {
          "name":"Map-XML is collected by 192.168.3.12 via HTTP",
          "type":"logtime",
          "target":"/var/logs/nginx/access.log",
          "regex":"^(.+)\\s/file.xml accessed by 192.168.3.12$",
          "format":"DD/MMM/YYYY:HH:mm:ss ZZ",
          "warning": "420",
          "critical": "900"
        }
      ]
    }
  ]
}